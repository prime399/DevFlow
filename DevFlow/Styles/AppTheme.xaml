<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ============================================== -->
  <!-- DEVFLOW UNIFIED DARK THEME (Catppuccin Mocha) -->
  <!-- ============================================== -->

  <!-- ============================================== -->
  <!-- CUSTOM FONTS                                  -->
  <!-- Inter: Modern UI font (cross-platform)        -->
  <!-- JetBrains Mono: Code/monospace font           -->
  <!-- ============================================== -->

  <!-- Inter Font Family -->
  <FontFamily x:Key="InterRegular">ms-appx:///Assets/Fonts/Inter-Regular.ttf#Inter</FontFamily>
  <FontFamily x:Key="InterMedium">ms-appx:///Assets/Fonts/Inter-Medium.ttf#Inter</FontFamily>
  <FontFamily x:Key="InterSemiBold">ms-appx:///Assets/Fonts/Inter-SemiBold.ttf#Inter</FontFamily>
  <FontFamily x:Key="InterBold">ms-appx:///Assets/Fonts/Inter-Bold.ttf#Inter</FontFamily>

  <!-- JetBrains Mono Font Family (for code) -->
  <FontFamily x:Key="JetBrainsMonoRegular">ms-appx:///Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>
  <FontFamily x:Key="JetBrainsMonoMedium">ms-appx:///Assets/Fonts/JetBrainsMono-Medium.ttf#JetBrains Mono</FontFamily>
  <FontFamily x:Key="JetBrainsMonoBold">ms-appx:///Assets/Fonts/JetBrainsMono-Bold.ttf#JetBrains Mono</FontFamily>

  <!-- Default App Font Families -->
  <FontFamily x:Key="AppFontFamily">ms-appx:///Assets/Fonts/Inter-Regular.ttf#Inter</FontFamily>
  <FontFamily x:Key="AppFontFamilyMedium">ms-appx:///Assets/Fonts/Inter-Medium.ttf#Inter</FontFamily>
  <FontFamily x:Key="AppFontFamilySemiBold">ms-appx:///Assets/Fonts/Inter-SemiBold.ttf#Inter</FontFamily>
  <FontFamily x:Key="AppFontFamilyBold">ms-appx:///Assets/Fonts/Inter-Bold.ttf#Inter</FontFamily>
  <FontFamily x:Key="MonospaceFontFamily">ms-appx:///Assets/Fonts/JetBrainsMono-Regular.ttf#JetBrains Mono</FontFamily>

  <!-- Font Sizes -->
  <x:Double x:Key="FontSizeCaption">11</x:Double>
  <x:Double x:Key="FontSizeSmall">12</x:Double>
  <x:Double x:Key="FontSizeBody">14</x:Double>
  <x:Double x:Key="FontSizeSubtitle">16</x:Double>
  <x:Double x:Key="FontSizeTitle">20</x:Double>
  <x:Double x:Key="FontSizeHeader">24</x:Double>
  <x:Double x:Key="FontSizeDisplay">32</x:Double>

  <!-- Base Surface Colors -->
  <Color x:Key="AppBackgroundColor">#181825</Color>
  <Color x:Key="SurfaceColor">#1E1E2E</Color>
  <Color x:Key="SurfaceVariantColor">#313244</Color>
  <Color x:Key="OverlayColor">#11111B</Color>

  <!-- Text Colors -->
  <Color x:Key="TextPrimaryColor">#CDD6F4</Color>
  <Color x:Key="TextSecondaryColor">#A6ADC8</Color>
  <Color x:Key="TextMutedColor">#6C7086</Color>
  <Color x:Key="TextSubtleColor">#585B70</Color>

  <!-- Accent Colors -->
  <Color x:Key="AccentPrimaryColor">#CBA6F7</Color>
  <Color x:Key="AccentSecondaryColor">#F5C2E7</Color>

  <!-- Semantic Colors -->
  <Color x:Key="SuccessColor">#A6E3A1</Color>
  <Color x:Key="WarningColor">#F9E2AF</Color>
  <Color x:Key="ErrorColor">#F38BA8</Color>
  <Color x:Key="InfoColor">#89B4FA</Color>

  <!-- HTTP Method Colors -->
  <Color x:Key="HttpGetColor">#A6E3A1</Color>
  <Color x:Key="HttpPostColor">#CBA6F7</Color>
  <Color x:Key="HttpPutColor">#F9E2AF</Color>
  <Color x:Key="HttpPatchColor">#F5C2E7</Color>
  <Color x:Key="HttpDeleteColor">#F38BA8</Color>
  <Color x:Key="HttpHeadColor">#89DCEB</Color>
  <Color x:Key="HttpOptionsColor">#6C7086</Color>

  <!-- Interactive State Colors -->
  <Color x:Key="HoverColor">#313244</Color>
  <Color x:Key="PressedColor">#45475A</Color>
  <Color x:Key="SelectedColor">#45475A</Color>
  <Color x:Key="FocusColor">#CBA6F7</Color>

  <!-- Border Colors -->
  <Color x:Key="BorderColor">#313244</Color>
  <Color x:Key="BorderSubtleColor">#45475A</Color>

  <!-- ============================================== -->
  <!-- BRUSHES                                       -->
  <!-- ============================================== -->

  <!-- Background Brushes -->
  <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
  <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariantColor}" />
  <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />

  <!-- Text Brushes -->
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
  <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
  <SolidColorBrush x:Key="TextSubtleBrush" Color="{StaticResource TextSubtleColor}" />

  <!-- Accent Brushes -->
  <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimaryColor}" />
  <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}" />

  <!-- Semantic Brushes -->
  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
  <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
  <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
  <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

  <!-- HTTP Method Brushes -->
  <SolidColorBrush x:Key="HttpGetBrush" Color="{StaticResource HttpGetColor}" />
  <SolidColorBrush x:Key="HttpPostBrush" Color="{StaticResource HttpPostColor}" />
  <SolidColorBrush x:Key="HttpPutBrush" Color="{StaticResource HttpPutColor}" />
  <SolidColorBrush x:Key="HttpPatchBrush" Color="{StaticResource HttpPatchColor}" />
  <SolidColorBrush x:Key="HttpDeleteBrush" Color="{StaticResource HttpDeleteColor}" />
  <SolidColorBrush x:Key="HttpHeadBrush" Color="{StaticResource HttpHeadColor}" />
  <SolidColorBrush x:Key="HttpOptionsBrush" Color="{StaticResource HttpOptionsColor}" />

  <!-- Interactive Brushes -->
  <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}" />
  <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}" />
  <SolidColorBrush x:Key="SelectedBrush" Color="{StaticResource SelectedColor}" />
  <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}" />

  <!-- Border Brushes -->
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
  <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}" />

</ResourceDictionary>
