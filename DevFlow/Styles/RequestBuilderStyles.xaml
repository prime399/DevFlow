<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- ============================================== -->
  <!-- REQUEST BUILDER STYLES                        -->
  <!-- Uses colors from AppTheme.xaml                -->
  <!-- ============================================== -->

  <!-- Alias brushes for request builder (using unified theme) -->
  <SolidColorBrush x:Key="RequestBarBackgroundBrush" Color="{StaticResource SurfaceColor}" />
  <SolidColorBrush x:Key="RequestBarBorderBrush" Color="{StaticResource BorderColor}" />
  <SolidColorBrush x:Key="TabBarBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
  <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource OverlayColor}" />
  <SolidColorBrush x:Key="SendButtonBrush" Color="{StaticResource SuccessColor}" />
  <SolidColorBrush x:Key="SendButtonHoverBrush" Color="#059669" />
  <SolidColorBrush x:Key="SaveButtonBrush" Color="{StaticResource AccentPrimaryColor}" />

  <!-- Send Button Style -->
  <Style x:Key="SendButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource SendButtonBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Padding" Value="20,10" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
            </Border>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder"
                                                   Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SendButtonHoverBrush}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder"
                                                   Storyboard.TargetProperty="Opacity">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="0.8" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Save Button Style -->
  <Style x:Key="SaveButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    <Setter Property="Padding" Value="16,10" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
            </Border>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder"
                                                   Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource HoverBrush}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- URL TextBox Style -->
  <Style x:Key="UrlTextBoxStyle" TargetType="TextBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="12,10" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="PlaceholderForeground" Value="{StaticResource TextMutedBrush}" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <!-- Method ComboBox Style -->
  <Style x:Key="MethodComboBoxStyle" TargetType="ComboBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="MinWidth" Value="100" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <!-- Request Tab Style -->
  <Style x:Key="RequestTabStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    <Setter Property="Padding" Value="16,12" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter x:Name="ContentText"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
            </Border>
            <Border x:Name="BottomIndicator"
                    Height="2"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="1,1,0,0" />
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder"
                                                   Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource HoverBrush}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Active Request Tab Style -->
  <Style x:Key="RequestTabActiveStyle" TargetType="Button" BasedOn="{StaticResource RequestTabStyle}">
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
            </Border>
            <Border Height="2"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource SendButtonBrush}"
                    CornerRadius="1,1,0,0" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Parameter Input Style -->
  <Style x:Key="ParameterTextBoxStyle" TargetType="TextBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="12,10" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="PlaceholderForeground" Value="{StaticResource TextSubtleBrush}" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <!-- Icon Button Style -->
  <Style x:Key="IconButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="MinWidth" Value="32" />
    <Setter Property="MinHeight" Value="32" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
            </Border>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundBorder"
                                                   Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource HoverBrush}" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
