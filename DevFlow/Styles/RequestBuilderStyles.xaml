  <SolidColorBrush x:Key="RequestBarBorderBrush" Color="{StaticResource BorderColor}" />
  <SolidColorBrush x:Key="TabBarBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
  <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource OverlayColor}" />
  <SolidColorBrush x:Key="SaveButtonBrush" Color="{StaticResource AccentPrimaryColor}" />
  
  <!-- Send Button Colors (High Contrast) -->
  <Color x:Key="SendButtonColor">#22C55E</Color>
  <Color x:Key="SendButtonHoverColor">#16A34A</Color>
  <Color x:Key="SendButtonTextColor">#052E16</Color>
  <SolidColorBrush x:Key="SendButtonBrush" Color="{StaticResource SendButtonColor}" />
  <SolidColorBrush x:Key="SendButtonHoverBrush" Color="{StaticResource SendButtonHoverColor}" />
  <SolidColorBrush x:Key="SendButtonTextBrush" Color="{StaticResource SendButtonTextColor}" />
  
